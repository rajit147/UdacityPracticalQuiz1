<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"   android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/login_screen">

 <!-- Toolbar -->
  <include
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      layout="@layout/toolbar"></include>

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/display_pic"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:src="@drawable/pro_pic"
        app:civ_border_color="#000000"
        app:civ_border_width="2dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="detailsUserName"
    android:id="@+id/details_username"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
        android:textColor="#FFFFFF"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detailsEmail"
        android:id="@+id/details_email"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/details_username"
        android:textColor="#FFFFFF"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detailsDescription"
        android:id="@+id/details_description"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/details_email"
        android:textColor="#FFFFFF"
        android:padding="10dp"/>
</RelativeLayout>